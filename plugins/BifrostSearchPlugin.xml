<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "PluginConfiguration.dtd">
<plugin>
	<name>BifrostSearchPlugin</name>
	<className>sk.fiit.rabbit.adaptiveproxy.plugins.services.bifrost.BifrostProcessingPlugin</className>
	<types>
		<type>RequestProcessingPlugin</type>
		<type>ResponseProcessingPlugin</type>
	</types>
	<classLocation/>
	<parameters>
		<param name="scriptUrl">${baseurl}/javascripts/bifrost.js</param>
		<param name="bypassPattern">/bifrost/search</param>
		<param name="generateResponse">true</param>
		<param name="allowedDomain">google.</param>
		<param name="recommendationUrlBase">${baseurl}/recommendations/show/</param>
		<param name="queryUrlBase">${baseurl}/recommendations/group/</param>
		<param name="negativeFeedbackUrl">${baseurl}/recommendations/negative/</param>
		<param name="assetsBase">${baseurl}/images/bifrost/</param>
		<param name="maxRecommendedDocuments">4</param>
		<param name="maxDocumentsFromQuery">2</param>
	</parameters>
</plugin>