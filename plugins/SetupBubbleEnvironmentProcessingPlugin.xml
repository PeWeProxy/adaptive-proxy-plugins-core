<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "PluginConfiguration.dtd">
<plugin>
	<name>SetupBubbleEnvironmentProcessingPlugin</name>
	<classLocation/>
	<className>sk.fiit.rabbit.adaptiveproxy.plugins.services.injector.JavaScriptInjectingProcessingPlugin</className>
	<libraries>
	</libraries>
	<types>
		<type>RequestProcessingPlugin</type>
		<type>ResponseProcessingPlugin</type>
	</types>
	<parameters>
		<param name="scriptUrl">${plugins-core:proxyurl}/FileSender/public/bubble.js</param>
		<param name="additionalHTML">
		<![CDATA[
			<div id="peweproxy_addons_container">
				<a href="#" class="__peweproxy_addons_button"></a>
				<div style="" id="peweproxy_icon_banner" class="hidden">
					<table>
						<tr><!-- bubble menu -->
						</tr>
					</table>
	            </div>
	            <!-- bubble windows -->
	        </div>
		    
			<style type="text/css">
				#peweproxy_addons_container{
					position: absolute;
					top: 0;
					right: 0;
					font-family: 'Trebuchet MS', Verdana, Arial;
					font-size: 12px;
					color: #2f2f2f;
					text-align: left;
				}
				
				div#peweproxy_addons_container .hidden{
					display: none;
				}
				
				div#peweproxy_icon_banner{
					position: absolute;
					top: 0;
					right: 0;
					background-image: url('${plugins-core:proxyurl}/FileSender/public/clientBubbleMenuImages/button_banner_wide.png');
					/*width: 79px;*/
					height: 30px;
				}
				
				a.__peweproxy_addons_button{
					position: absolute;
					top: 0;
					right: 0;
					display: block;
					background-repeat: no-repeat;
					background-image: url('${plugins-core:proxyurl}/FileSender/public/clientBubbleMenuImages/button_small.png');
					width: 12px;
					height: 12px;
				}
			</style>
		]]>
		</param>
	</parameters>
</plugin>