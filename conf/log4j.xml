<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <param name="Name" value="Standard output appender"/>
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{HH:mm:ss}] [%-5p] [%C] %m %n"/>
		</layout>
    </appender>
    <logger name="org.apache">
    	<level value="warn" />
    </logger>
    <logger name="org.apache.commons.httpclient.Wire">
    	<level value="warn" />
    </logger>
    <logger name="rabbit">
    	<level value="warn" />
    </logger>
    <logger name="sk.fiit.rabbit.adaptiveproxy">
    	<level value="warn" />
    </logger>
    <logger name="sk.fiit.rabbit.adaptiveproxy.plugins.services">
    	<level value="all" />
    </logger>
    <logger name="sk.fiit.rabbit.adaptiveproxy.plugins.services.ServicesHandleBase">
    	<level value="warn" />
    </logger>
    
    <!--ROOT Logger-->
    <root>
        <level value="all" />
        <appender-ref ref="stdout" />
    </root>
</log4j:configuration>
